<div>
    <h2>
      Post by <%= post.user.name %>
    </h2>
    <small>
      <span>Comment: <%= post.commentscounter %>, Likes: <%= post.likescounter %></span>
    </small>

  <p>
   text content <%= post.text %>
  </p>
   Likes:

<div>
  <h3>Comments:</h3>
  <% if post.comments.empty? %>
    <p>There are no comment!</p>
  <% end %>
  <% @post.comments.each do |comment| %>
    <div class="comment-card">
      <strong>
      <%= comment.user.name %>
        <%= link_to user_path(comment.authorId) do %>
            
        <% end %>
        :
      </strong>
      <%= comment.text %>
    </div>
  <% end %>
</div>
</div>