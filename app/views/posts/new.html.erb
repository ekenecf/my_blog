<h1>Create new post</h1>

<%= form_with model: @post, url: user_posts_path, method: :post, local: true do |f| %>
  <%= f.label :title, 'Title',style:"with:100%" %>
  <%= f.text_field :title,style:"width:100%" %>
  <%= f.label :text, 'Content' ,style:"width:100%" %>
  <%= f.text_area :text ,style:"width:100%" %>
  <%= f.submit "Save post" %>
<% end %>
